            </div>
            <div class="form-group">
                <label asp-for="CelClient" class="control-label"></label>
                <input asp-for="CelClient" class="form-control" />
                <span asp-validation-for="CelClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneClient" class="control-label"></label>
                <input asp-for="PhoneClient" class="form-control" />
