                <label asp-for="StreetClient" class="control-label"></label>
                <input asp-for="StreetClient" class="form-control" />
                <span asp-validation-for="StreetClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountyClient" class="control-label"></label>
                <input asp-for="CountyClient" class="form-control" />
                <span asp-validation-for="CountyClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCodeClient" class="control-label"></label>
                <input asp-for="ZipCodeClient" class="form-control" />
                <span asp-validation-for="ZipCodeClient" class="text-danger"></span>
            </div>
