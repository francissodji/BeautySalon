                <label asp-for="StateClient" class="control-label"></label>
                @if (ViewBag.StateList != null)
                {
                    @Html.DropDownListFor(m => m.StateClient, ViewBag.StateList as SelectList, "... Select State ...", new { @class = "form-control" })
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
